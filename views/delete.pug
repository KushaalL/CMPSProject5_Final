extends layout.pug

block content
    h1 Delete Contact
    h2 #{contact.title}#{contact.first} #{contact.last}
    p.text-danger.fw-bold Are you sure you want to delete this contact?
    form(action="/contacts/"+contact.id+"/delete", method = "post")
        button.btn.btn-danger(type="submit") Yes!
        a.ms-4(href="/") Nevermind